/*
* This configuration file is the one used when indicating the Nextflow parameter -profile hpc_slurm
*/

process {
    process.executor = 'LSF'
    process.queue = 'production'
    process.cpus = 40
    perJobMemLimit = true
    errorStrategy = { task.exitStatus == 140 ? 'retry' : 'terminate' }
    maxRetries = 3
}