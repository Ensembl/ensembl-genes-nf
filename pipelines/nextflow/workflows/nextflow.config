NXF_WORK = System.getenv("NXF_WORK") ?: "$PWD/work"

// Set minimum required Nextflow version, stopping execution if current version does not match
nextflowVersion = '!>=23.10'

plugins {
  id 'nf-schema@2.2.0'
}

validation {
  help {
    enabled = true
    validation.failUnrecognisedParams = true // default: false
  }
}

// Set up resource usage trace
trace {
    enabled = false
    fields = 'task_id,name,process,hash,status,exit,attempt,submit,time,realtime,cpus,%cpu,memory,%mem'
    // filter = 'name =~ /foo.*/ && status == "FAILED"'
}

// Email notification
notification {
    enabled = true
    to = "${USER}@ebi.ac.uk"
}

// // Global default params, used in configs
params {
  // Running options
  run_busco_core = false
  run_busco_ncbi = false
  run_omark = false
  run_ensembl_stats = false
  run_ensembl_beta_metakeys = false
  apply_ensembl_stats = false
  apply_ensembl_beta_metakeys = false
  apply_busco_metakeys = false
  canonical_only = '--canonical_only 1'
  genomio_version = 'latest'

  // db connection
  host = null
  port = null
  user_r = null
  user_w = null
  password = null
  server_set = ''
  busco_dataset = null
  mysql_cmds = "/hps/software/users/ensembl/ensw/mysql-cmds/ensembl"
  mysql_ensadmin = "ensadmin"
  ncbiBaseUrl = "https://api.ncbi.nlm.nih.gov/datasets/v2alpha/genome/accession/"

  project = 'ensembl'
  team = null
  // Coredb meta key data parsing
  metatable_keys = "${projectDir}/../data/meta_filter.json"

  // Input options
  csvFile = null
  enscode = null
  bioperl = "${params.enscode}/bioperl-1.6.924"
  outDir = null
  cacheDir = "$NXF_WORK/cache"
  files_latency = 60
  cleanCache = false // Default to false
}

env {
  ENSCODE = "${params.enscode}"
  PERL5LIB = "${params.enscode}/ensembl/modules:${params.enscode}/ensembl-analysis/modules:" +
    "${params.enscode}/ensembl-io/modules:${params.enscode}/core_meta_updates/scripts/stats:${params.bioperl}:$PERL5LIB"
}

includeConfig '../conf/busco.config'
includeConfig '../conf/omark.config'
includeConfig '../conf/genomio.config'

singularity {
  enabled = true
  autoMounts = true
  pullTimeout = '1 hour'
}

profiles {

  conda {
    conda.enabled = true
  }

  standard {
    executor {
      name = 'lsf'
      perJobMemLimit = true
      queueSize = 2000
      submitRateLimit = "10/1sec"
      queueGlobalStatus = true
      exitReadTimeout = "30 min"
    }

    process {
      queue = 'production'
    }
  }

  slurm {
    executor {
      name = 'slurm'
      queueSize = 2000
      submitRateLimit = "10/1sec"
      queueGlobalStatus = true
      exitReadTimeout = "30 min"
    }

    process {
      clusterOptions = '-t 7-00:00:00 -e errlog.txt'
    }
  }

}

process {
  errorStrategy = { task.exitStatus in [104, 137, 140, 143] ? 'retry' : 'terminate' }
  maxRetries = 3
  cache = 'lenient'

  withLabel: 'local' {
    executor = 'local'
    cpus = 1
    memory = { 1.GB * Math.pow(2, (task.attempt - 1)) }
    maxForks = 1
  }

  withLabel: 'default' {
    cpus = 1
    memory = { 3.GB * task.attempt }
    time = { 1.h * task.attempt }
  }

  withLabel: 'fetch_file' {
    cpus = 2
    memory = { 8.GB * task.attempt }
    time = { 2.h * task.attempt }
  }

  withLabel: 'busco' {
    cpus = 40
    memory = { 40.GB * task.attempt }
    time = { 4.h * task.attempt }
    module = 'singularity-3.8.7-gcc-11.2.0-jtpp6xx'
    container = "ezlabgva/busco:${params.busco_version}"
    afterScript = { "sleep ${params.files_latency}" }
  }

  withLabel: 'omamer' {
    maxForks = 15
    cpus = 10
    memory = { 50.GB * task.attempt }
    time = { 4.h * task.attempt }
    module = 'singularity-3.7.0-gcc-9.3.0-dp5ffrp' 
    container = "${params.omark_singularity_path}"
    afterScript = { "sleep ${params.files_latency}" }
  }

  withLabel: 'genomio' {
    cpus = 1
    memory = { 2.GB * Math.pow(2, (task.attempt - 1)) }
    time = { 0.2.h * task.attempt }
    module = 'singularity-3.8.7-gcc-11.2.0-jtpp6xx'
    container = "ensemblorg/ensembl-genomio:${params.genomio_version}"
    afterScript = { "sleep 30" }
  }

  withLabel: 'python' {
    maxForks = 10
    memory = { 10.GB * task.attempt }
    time = { 4.h * task.attempt }
  }
}
