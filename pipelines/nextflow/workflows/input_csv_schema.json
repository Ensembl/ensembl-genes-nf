{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/rnaseq/master/assets/schema_input.json",
    "title": "ensembl-genes-nf - params.csvFile schema",
    "description": "Schema for the file provided with params.csvFile",
    "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "core": {
                    "type": "string",
                    "pattern": "^\\S+$",
                    "errorMessage": "Core(s) must be provided and db names cannot contain or have trailing spaces",
                    "meta": "database_name"
                },
                "accession": {
                    "type": "string",
                    "pattern": "^GC[AF]_[0-9]+.[0-9]$",
                    "errorMessage": "Please provide a valid INSDC accession",
                    "meta": "accession"
                },
                "taxon_id": {
                    "type": "integer",
                    "pattern": "^[0-9]+$",
                    "errorMessage": "NCBI taxonomy id linked to the species genome 'accession'",
                    "meta": "taxon_id"
                }
        },
        "if": {
            "not": {
                "properties": {
                    "core": {
                        "then": {"required": ["gca", "taxon_id"] }
                    }
                }
            }
        }
    }
}